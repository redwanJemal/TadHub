# TadHub Production Environment Variables
# Copy to .env.prod and fill in values

# =============================================================================
# PostgreSQL
# =============================================================================
POSTGRES_USER=tadhub
POSTGRES_PASSWORD=<strong-password-here>
POSTGRES_DB=tadhub

# =============================================================================
# Redis
# =============================================================================
REDIS_PASSWORD=<strong-password-here>

# =============================================================================
# RabbitMQ
# =============================================================================
RABBITMQ_USER=tadhub
RABBITMQ_PASSWORD=<strong-password-here>

# =============================================================================
# MinIO (S3 Storage)
# =============================================================================
MINIO_ACCESS_KEY=<access-key>
MINIO_SECRET_KEY=<secret-key>

# =============================================================================
# Keycloak (External - auth.endlessmaker.com)
# Note: Keycloak is deployed separately for reuse across projects
# =============================================================================
# See keycloak-standalone for separate deployment

# =============================================================================
# Let's Encrypt / SSL
# =============================================================================
ACME_EMAIL=admin@endlessmaker.com

# =============================================================================
# Traefik Dashboard Auth
# Generate with: htpasswd -nb admin <password>
# =============================================================================
TRAEFIK_DASHBOARD_AUTH=admin:$apr1$xxx...

# =============================================================================
# Application Settings
# =============================================================================
# JWT signing key (from Keycloak realm settings)
JWT_SECRET=<from-keycloak>

# Stripe (optional, for billing)
STRIPE_SECRET_KEY=sk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
